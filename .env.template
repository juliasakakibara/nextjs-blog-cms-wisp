# ====================================
# GEEK WISP - CONFIGURATION TEMPLATE
# ====================================
# Copy this file to .env.local and customize the values below

# ====================================
# REQUIRED CONFIGURATION
# ====================================

# Wisp CMS Blog ID (REQUIRED)
# Get this from your Wisp dashboard
NEXT_PUBLIC_BLOG_ID=your-blog-id-here

# ====================================
# BASIC BLOG INFORMATION
# ====================================

# Blog display name (appears in header and meta)
NEXT_PUBLIC_BLOG_DISPLAY_NAME=My Travel Blog

# Copyright holder name (appears in footer)
NEXT_PUBLIC_BLOG_COPYRIGHT=Your Name

# Default page title (used for SEO)
NEXT_DEFAULT_METADATA_DEFAULT_TITLE=My Amazing Travel Blog

# Blog description (used for SEO and meta)
NEXT_PUBLIC_BLOG_DESCRIPTION=A blog about travel adventures and lifestyle tips

# Base URL of your site (used for SEO and canonical URLs)
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# ====================================
# LAYOUT & DESIGN TOKENS
# ====================================

# Maximum width of content container
# Options: xs, sm, md, lg, xl, 2xl, 3xl, 4xl, 5xl, 6xl, 7xl, full
NEXT_PUBLIC_MAX_WIDTH=6xl

# Container padding
NEXT_PUBLIC_CONTAINER_PADDING=2rem

# Primary font family
NEXT_PUBLIC_FONT_FAMILY=Inter

# Site language
NEXT_PUBLIC_LANGUAGE=en

# ====================================
# NAVIGATION CONFIGURATION
# ====================================

# Menu items in JSON format
# Each item should have: name, href, and optionally openInNewTab
NEXT_PUBLIC_MENU_ITEMS=[{"name":"Blog","href":"/"},{"name":"About","href":"/about"},{"name":"Contact","href":"/contact"}]


# Enable RSS feed link in footer
NEXT_PUBLIC_RSS_ENABLED=true

# ====================================
# CONTENT CONFIGURATION
# ====================================

# Posts configuration

# Fallback image for posts without featured images
NEXT_PUBLIC_PLACEHOLDER_IMAGE=/images/placeholder.webp

# Loading text displayed during data fetching
NEXT_PUBLIC_LOADING_TEXT=Loading...

# ====================================
# COMMENTS CONFIGURATION
# ====================================

# Title for the add comments section
NEXT_PUBLIC_COMMENTS_TITLE_ADD=Leave a Comment

# Title for the comments list section
NEXT_PUBLIC_COMMENTS_TITLE_LIST=Comments

# ====================================
# HEADER STYLING
# ====================================

# Header title font size for mobile
# Options: text-sm, text-base, text-lg, text-xl, text-2xl, text-3xl, text-4xl, text-5xl, text-6xl
NEXT_PUBLIC_HEADER_TITLE_SIZE_MOBILE=text-4xl

# Header title font size for desktop
NEXT_PUBLIC_HEADER_TITLE_SIZE_DESKTOP=text-6xl

# Header top margin for mobile
NEXT_PUBLIC_HEADER_MARGIN_TOP_MOBILE=mt-8

# Header top margin for desktop
NEXT_PUBLIC_HEADER_MARGIN_TOP_DESKTOP=mt-16

# Header bottom margin
NEXT_PUBLIC_HEADER_MARGIN_BOTTOM=mb-12

# ====================================
# FOOTER STYLING
# ====================================

# Footer top margin for mobile
NEXT_PUBLIC_FOOTER_MARGIN_TOP_MOBILE=mt-8

# Footer top margin for desktop
NEXT_PUBLIC_FOOTER_MARGIN_TOP_DESKTOP=mt-16

# Footer bottom margin
NEXT_PUBLIC_FOOTER_MARGIN_BOTTOM=mb-12

# Show current year in copyright
NEXT_PUBLIC_FOOTER_SHOW_YEAR=true

# ====================================
# HERO SECTION
# ====================================

# Enable/disable hero section on homepage
NEXT_PUBLIC_HERO_ENABLED=true

# Hero section title
NEXT_PUBLIC_HERO_TITLE=hacker space.

# Hero section subtitle/description
NEXT_PUBLIC_HERO_SUBTITLE=Building lasting connections with your audience is our mission. We infuse creativity into every touchpoint, whether it's customer experience, relationship management, or commerce.

# Hero section padding for mobile
NEXT_PUBLIC_HERO_PADDING_Y_MOBILE=py-20

# Hero section padding for desktop
NEXT_PUBLIC_HERO_PADDING_Y_DESKTOP=py-40

# ====================================
# SEO & OPEN GRAPH
# ====================================

# Open Graph image dimensions
NEXT_PUBLIC_OG_IMAGE_WIDTH=1200
NEXT_PUBLIC_OG_IMAGE_HEIGHT=630

# Secret for signing OG image URLs (leave as default for most cases)
OG_IMAGE_SECRET=secret_used_for_signing_and_verifying_the_og_image_url

# ====================================
# OPTIONAL ADVANCED CONFIGURATION
# ====================================

# Add your own custom environment variables below
# Remember to update src/config.ts if you add new tokens

# Example custom tokens:
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
# NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com
# NEXT_PUBLIC_SOCIAL_TWITTER=@yourusername
# NEXT_PUBLIC_SOCIAL_INSTAGRAM=yourusername
